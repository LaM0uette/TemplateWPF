<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    
    <!-- Radius -->
    <sys:Double x:Key="VRscRound">2</sys:Double>
    <CornerRadius x:Key="RscRound" 
                  BottomLeft="{StaticResource VRscRound}" 
                  BottomRight="{StaticResource VRscRound}" 
                  TopLeft="{StaticResource VRscRound}" 
                  TopRight="{StaticResource VRscRound}"/>
    
    <sys:Double x:Key="VRscRoundTiny">2</sys:Double>
    <CornerRadius x:Key="RscRoundTiny" 
                  BottomLeft="{StaticResource VRscRoundTiny}" 
                  BottomRight="{StaticResource VRscRoundTiny}" 
                  TopLeft="{StaticResource VRscRoundTiny}" 
                  TopRight="{StaticResource VRscRoundTiny}"/>
    
</ResourceDictionary>